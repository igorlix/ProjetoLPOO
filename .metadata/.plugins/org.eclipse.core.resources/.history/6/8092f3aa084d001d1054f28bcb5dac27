package modelos;
import javax.swing.*;

import controle.controle;

import java.awt.*;

public class blocos extends JButton {

    public static int WIDTH = GamePanel.PANEL_WIDTH / menus.BOARD_SIZE;
    public static int HEIGHT = GamePanel.PANEL_HEIGHT / menus.BOARD_SIZE;

    private int x, y;
    private final boolean emptyCell;
    private final String value;


    public blocos(int x, int y, String value, Boolean emptyCell) {
        super();
        this.x = x;
        this.y = y;
        this.value = value;
        this.emptyCell = emptyCell;
        initBlocos();
    }

    public int getX() {
        return x;
    }

    public void setX(int x) {
        this.x = x;
    }

    public int getY() {
        return y;
    }

    public void setY(int y) {
        this.y = y;
    }

    public String getValue() {
        return value;
    }

    public boolean isEmptybloco() {
        return emptyCell;
    }

    private void initBlocos() {
        controle.loadPreferences(this,
                Color.red,
                Color.blue,
                new Font("Ink Free", Font.BOLD, blocos.WIDTH / 4));
    }


}